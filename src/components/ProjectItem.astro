---
// Extraemos las propiedades de cada proyecto
const { name, image, description, repoUrl } = Astro.props;
---

<div class="bg-slate-800 border border-slate-700 rounded-xl shadow-lg overflow-hidden flex flex-col md:flex-row">
  <div class="md:w-1/3">
    <img src={image} alt={name} class="object-cover w-full h-48 md:h-full" />
  </div>
  <div class="p-6 flex flex-col justify-between md:w-2/3">
    <div>
      <h2 class="text-2xl font-bold text-white mb-2">{name}</h2>
      <p class="text-gray-300 text-sm">{description}</p>
    </div>
    <div class="mt-4 text-right">
      <a 
        href={repoUrl} 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-block bg-cyan-400 text-slate-900 font-semibold py-2 px-4 rounded hover:bg-cyan-500 transition-colors duration-300"
      >
        Ver Repo
      </a>
    </div>
  </div>
</div>