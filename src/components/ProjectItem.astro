---
// Extraemos las propiedades de cada proyecto
const { name, image, description, repoUrl } = Astro.props;
---

<div class="relative bg-slate-800 border border-slate-700 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl">
  <div class="absolute left-0 top-0 h-full w-1 bg-cyan-400"></div>

  <div class="relative overflow-hidden">
    <img
      src={image}
      alt={name}
      class="object-cover w-full h-48 md:h-56 filter brightness-75 transition-all duration-300 hover:brightness-100"
    />
    {/* Overlay degradado (oscurece la parte inferior de la imagen) */}
    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-40 pointer-events-none"></div>
  </div>

  <div class="p-6 flex flex-col justify-between">
    <div>
      <h2 class="text-2xl font-bold text-white mb-2">{name}</h2>
      <p class="text-gray-300 text-sm line-clamp-3">
        {description}
      </p>
    </div>
    <div class="mt-4 flex justify-end">
      <a
        href={repoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block 
               bg-cyan-400 
               text-slate-900 
               font-semibold 
               py-2 px-4 
               rounded 
               hover:bg-cyan-500 
               transition-colors duration-300"
      >
        Ver Repo
      </a>
    </div>
  </div>
</div>
