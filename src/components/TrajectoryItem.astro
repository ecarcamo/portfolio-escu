---
const { title, date, description, type, icon } = Astro.props;

type TrajectoryType = 'education' | 'work' | 'default';

const typeColors: Record<TrajectoryType, string> = {
  education: "cyan",
  work: "purple",
  default: "red"
};

const color = typeColors[(type as TrajectoryType)] || typeColors.default;
---

<li class="relative flex items-start group">
  <!-- Punto en la lÃ­nea temporal -->
  <div class="absolute left-0 flex items-center justify-center mt-1">
    <div class={`w-3 h-3 bg-${color}-400 rounded-full ring-4 ring-slate-800 shadow-lg`}></div>
  </div>

  <!-- Contenido -->
  <div class={`ml-10 bg-slate-800/80 border border-slate-700 rounded-xl p-6 backdrop-blur-sm transition-all duration-300 hover:border-${color}-400/30 group-hover:translate-x-1`}>
    <div class="flex items-center gap-2 mb-1">
      <span class="text-xl">{icon}</span>
      <h3 class="text-lg font-semibold text-white">{title}</h3>
    </div>
    <time class={`block mb-2 text-sm font-medium text-${color}-400`}>{date}</time>
    <p class="text-gray-300 text-sm leading-relaxed">{description}</p>
  </div>
</li>