---
const { title, date, description } = Astro.props;
---

<li class="relative flex items-start z-10">
  <span class="absolute left-2 top-2 w-8 h-8 flex items-center justify-center">
    <span class="w-4 h-4 bg-cyan-400 rounded-full border-4 border-slate-900 shadow"></span>
  </span>
  <div class="ml-14 bg-slate-800/90 border border-slate-700 rounded-xl shadow-lg p-6 w-full">
    <h2 class="text-xl font-semibold text-white mb-1">{title}</h2>
    <span class="block text-xs text-cyan-300 mb-2">{date}</span>
    <p class="text-gray-300 text-sm">{description}</p>
  </div>
</li>