---
import { programmingSkills, softSkills, languages, methodologies } from '../data/skills.js';
---

<div class="opacity-20 hover:opacity-100 transition-opacity duration-300 h-full w-full p-4">
  <h1 class="text-4xl text-center font-bold my-5 text-white">Skills</h1>
  <div class="flex flex-col gap-6 pb-4 overflow-y-auto h-[90%] pr-2">
    <!-- Lenguajes de Programación -->
    <section class="bg-slate-800/80 border border-slate-700 p-6 rounded-xl shadow-lg backdrop-blur-sm">
      <h2 class="text-2xl mb-4 text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
        </svg>
        Lenguajes de Programación
      </h2>
      <div class="space-y-4">
        {programmingSkills.languages.map(skill => (
          <div class="relative">
            <div class="flex justify-between mb-1">
              <span class={`text-sm font-medium ${skill.color}`}>{skill.name}</span>
              <span class={`text-sm font-medium ${skill.color}`}>{skill.level}%</span>
            </div>
            <div class="h-2 bg-gray-700 rounded-full">
              <div class={`h-2 rounded-full bg-gradient-to-r from-cyan-400 to-${skill.color}`} style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Frontend -->
    <section class="bg-slate-800/80 border border-slate-700 p-6 rounded-xl shadow-lg backdrop-blur-sm">
      <h2 class="text-2xl mb-4 text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
        </svg>
        Frontend
      </h2>
      <div class="space-y-4">
        {programmingSkills.frontend.map(skill => (
          <div class="relative">
            <div class="flex justify-between mb-1">
              <span class={`text-sm font-medium ${skill.color}`}>{skill.name}</span>
              <span class={`text-sm font-medium ${skill.color}`}>{skill.level}%</span>
            </div>
            <div class="h-2 bg-gray-700 rounded-full">
              <div class={`h-2 rounded-full bg-gradient-to-r from-yellow-400 to-${skill.color}`} style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Backend -->
    <section class="bg-slate-800/80 border border-slate-700 p-6 rounded-xl shadow-lg backdrop-blur-sm">
      <h2 class="text-2xl mb-4 text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
        </svg>
        Backend
      </h2>
      <div class="space-y-4">
        {programmingSkills.backend.map(skill => (
          <div class="relative">
            <div class="flex justify-between mb-1">
              <span class={`text-sm font-medium ${skill.color}`}>{skill.name}</span>
              <span class={`text-sm font-medium ${skill.color}`}>{skill.level}%</span>
            </div>
            <div class="h-2 bg-gray-700 rounded-full">
              <div class={`h-2 rounded-full bg-gradient-to-r from-green-400 to-${skill.color}`} style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Bases de Datos -->
    <section class="bg-slate-800/80 border border-slate-700 p-6 rounded-xl shadow-lg backdrop-blur-sm">
      <h2 class="text-2xl mb-4 text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
        </svg>
        Bases de Datos
      </h2>
      <div class="space-y-4">
        {programmingSkills.databases.map(skill => (
          <div class="relative">
            <div class="flex justify-between mb-1">
              <span class={`text-sm font-medium ${skill.color}`}>{skill.name}</span>
              <span class={`text-sm font-medium ${skill.color}`}>{skill.level}%</span>
            </div>
            <div class="h-2 bg-gray-700 rounded-full">
              <div class={`h-2 rounded-full bg-gradient-to-r from-blue-400 to-${skill.color}`} style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Metodologías -->
    <section class="bg-slate-800/80 border border-slate-700 p-6 rounded-xl shadow-lg backdrop-blur-sm">
      <h2 class="text-2xl mb-4 text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        Metodologías
      </h2>
      <div class="space-y-4">
        {methodologies.map(method => (
          <div class="relative">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium text-indigo-300">{method.name}</span>
              <span class="text-sm font-medium text-indigo-300">{method.level}%</span>
            </div>
            <div class="h-2 bg-gray-700 rounded-full">
              <div class="h-2 rounded-full bg-gradient-to-r from-indigo-400 to-purple-400" style={`width: ${method.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Habilidades Blandas -->
    <section class="bg-slate-800/80 border border-slate-700 p-6 rounded-xl shadow-lg backdrop-blur-sm">
      <h2 class="text-2xl mb-4 text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Habilidades Blandas
      </h2>
      <div class="space-y-4">
        {softSkills.map(skill => (
          <div class="relative">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium text-purple-300">{skill.name}</span>
              <span class="text-sm font-medium text-purple-300">{skill.level}%</span>
            </div>
            <div class="h-2 bg-gray-700 rounded-full">
              <div class="h-2 rounded-full bg-gradient-to-r from-purple-400 to-pink-400" style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Idiomas -->
    <section class="bg-slate-800/80 border border-slate-700 p-6 rounded-xl shadow-lg backdrop-blur-sm">
      <h2 class="text-2xl mb-4 text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
        </svg>
        Idiomas
      </h2>
      <div class="grid grid-cols-1 gap-4">
        {languages.map(lang => (
          <div class="flex items-center justify-between p-3 bg-slate-700/50 rounded-lg">
            <div class="flex items-center gap-3">
              <span class="text-2xl">{lang.flag}</span>
              <span class="text-white">{lang.name}</span>
            </div>
            <span class="px-3 py-1 text-sm bg-green-400/20 text-green-400 rounded-full">
              {lang.level}
            </span>
          </div>
        ))}
      </div>
    </section>
  </div>
</div>