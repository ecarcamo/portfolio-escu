---
import AboutMe from '../components/AboutMe.astro';
import ContactMe from '../components/ContactMe.astro';
import Projects from '../components/Projects.astro';
import Skills from '../components/Skills.astro';
import Trajectory from '../components/Trajectory.astro';
import Base from '../layouts/Base.astro';


---

<Base title="Portafolio | Escu">

    <main class="grid grid-cols-7 grid-rows-6 gap-4 h-dvh w-full p-4">

        <div class="col-span-2 row-span-6 effect-hover rounded-3xl p-4">
            <Trajectory />
        </div>
        <div class="col-span-3 row-span-2 col-start-3 effect-hover rounded-3xl p-4">
            <AboutMe />
        </div>
        <div class="col-span-3 row-span-4 col-start-3 row-start-3 effect-hover rounded-3xl p-4">
            <Projects />
        </div>
        <div class="col-span-2 row-span-2 col-start-6 row-start-5 effect-hover rounded-3xl p-4">            
            <ContactMe />
        </div>
        <div class="col-span-2 row-span-4 col-start-6 row-start-1 effect-hover rounded-3xl p-4">            
            <Skills />
        </div>
    </main>
        
</Base>
